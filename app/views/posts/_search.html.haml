= form_tag url_for(:action => 'search'), :class => 'form-search', :id => 'search_form', :remote => true do
  .input-prepend
    = submit_tag 'Search', :class => 'btn', :id => 'search_button'
    = text_field_tag :search, params[:search], :class => 'span2 search-query', :id => 'search_field', :autofocus => true